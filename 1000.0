dt = datetime.fromtimestamp(seconds, tz=timezone.utc)
        return dt.isoformat()
    except (TypeError, ValueError, OSError):
        return None

_RELATIVE_TIME_PATTERN = re.compile(r"(\d+)")

def relative_time_to_days_ago(relative: str) -> Optional[int]:
    """
    Convert a human-readable relative time string to an approximate number of days.

    Examples of accepted inputs:
    - "vor 30+ Tagen"
    - "30+ days ago"
    - "2 days ago"
    - "vor 1 Tag"
    """
    if not relative:
        return None

    match = _RELATIVE_TIME_PATTERN.search(relative)
    if not match:
        # Fallback for generic "today", "yesterday", etc.
        lowered = relative.lower()
        if "today" in lowered:
            return 0
        if "yesterday" in lowered:
            return 1
        return None

    try:
        value = int(match.group(1))
    except ValueError:
        return None

    # Treat "30+" and similar as at least that many days
    return value